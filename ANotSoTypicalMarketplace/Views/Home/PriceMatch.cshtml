@model ANotSoTypicalMarketplace.Models.PriceMatch

<form asp-action="PriceMatch" method="Post">


    <div class="form-group">
        <label asp-for="Id">Id: </label>
        <input class="form-control" asp-for="Id" name="Id" value="@ViewData["prodid"]" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Name">Name: </label>
        <input class="form-control" asp-for="Name" name="Name" value="@ViewData["prodname"]" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Price">Price: </label>
        <input class="form-control" asp-for="Price" name="Price" value="@ViewData["prodprice"]" readonly />
    </div>


    <div class="text-center panel-body">
        <button type="submit" class=" btn btn-primary">Confirm Purchase</button>
    </div>
</form>