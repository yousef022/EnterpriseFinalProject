@model IEnumerable<ANotSoTypicalMarketplace.Models.Cart>

<table class="table table-bordered table-striped m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Price</th>
            <th>ShippingFee</th>
          
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                    <tr>
                        <td>@item.Id</td>
                @foreach(var cItem in item.CartItems)
                {
                    <td>@cItem.Name</td>
                    <td>@cItem.Price</td>
                    <td>@cItem.ShippingFee</td>
                    <td><a class="btn btn-primary">@Html.ActionLink("Remove","DeleteFromCart", new { id=item.Id })</a></td>
                    <td><a class="btn btn-primary" asp-action="SellProductFromCart" asp-route-id="@item.Id" asp-route-stock="@cItem.Stock">Buy Now</a></td>
                }
            </tr>
        }
    </tbody>
</table>