@model IEnumerable<ANotSoTypicalMarketplace.Models.Product>

<h2>Add a Product</h2>

<form asp-action="AddProduct" method="post">
    <div class="form-group">
        <label for="Id">ID: </label>
        <input class="form-control" name="Id" />
    </div>

    <div class="form-group">
        <label for="Name">Name: </label>
        <input class="form-control" name="Name" />
    </div>

    <div class="form-group">
        <label for="Description">Description: </label>
        <input class="form-control" name="Description" />
    </div>

    <div class="form-group">
        <label for="Stock">Quantity: </label>
        <input class="form-control" name="Stock" />
    </div>

    <div class="form-group">
        <label for="Price">Price: </label>
        <input class="form-control" name="Price" />
    </div>

    <div class="form-group">
        <label for="ShippingFee">ShippingFee: </label>
        <input class="form-control" name="ShippingFee" />
    </div>

    <div class="form-group">
        <label for="CategoryId">Category Id: </label>
        <input class="form-control" name="CategoryId" />
    </div>

    <div class="form-group">
        <label for="IsUsed">Is Used: </label>
        <input class="form-control" name="IsUsed" type="checkbox" value="true"/>
    </div>

    <div class="form-group">
        <label for="CanReturn">Can Return: </label>
        <input class="form-control" name="CanReturn" type="checkbox" value="true" />
    </div>

    <div class="text-center panel-body">
        <button type="submit" class=" btn btn-primary">Add Product</button>
    </div>

</form>

